generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum SourceType {
  TELEGRAM
  WEB
}

model User {
  id            String   @id @default(dbgenerated("pg_catalog.gen_random_uuid()")) @db.Uuid
  name          String
  email         String
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions  Session[]
  accounts  Account[]
  interests UserInterest[]
  bookmarks Bookmark[]

  @@unique([email])
  @@map("user")
}

model Category {
  id        String   @id @default(dbgenerated("pg_catalog.gen_random_uuid()")) @db.Uuid
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())

  news      Articles[]
  interests UserInterest[]

  @@map("categories")
}

model Source {
  id        String     @id @default(dbgenerated("pg_catalog.gen_random_uuid()")) @db.Uuid
  name      String
  baseUrl   String
  type      SourceType
  createdAt DateTime   @default(now())

  news Articles[]
  @@map("source")
}


model Articles {
  id          String    @id @default(dbgenerated("pg_catalog.gen_random_uuid()")) @db.Uuid
  title       String
  content     String?
  summary     String?
  url         String    @unique
  imageUrl    String?
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  view        String?
  
  categoryId String @db.Uuid
  sourceId   String @db.Uuid

  popularityScore Float   @default(0)
  isBreaking      Boolean @default(false)

  category Category @relation(fields: [categoryId], references: [id])
  source   Source   @relation(fields: [sourceId], references: [id])

  bookmarks Bookmark[]

  @@index([categoryId])
  @@index([publishedAt])
  @@map("articles")
}

model UserInterest {
  id         String   @id @default(dbgenerated("pg_catalog.gen_random_uuid()")) @db.Uuid
  userId     String   @db.Uuid
  categoryId String   @db.Uuid
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId])
  @@map("user_interests")
}

model Bookmark {
  id        String   @id @default(dbgenerated("pg_catalog.gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid
  newsId    String   @db.Uuid
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  news Articles @relation(fields: [newsId], references: [id], onDelete: Cascade)

  @@unique([userId, newsId])
  @@map("bookmark")
}

model Session {
  id        String   @id @default(dbgenerated("pg_catalog.gen_random_uuid()")) @db.Uuid
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(dbgenerated("pg_catalog.gen_random_uuid()")) @db.Uuid
  accountId             String
  providerId            String
  userId                String    @db.Uuid
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(dbgenerated("pg_catalog.gen_random_uuid()")) @db.Uuid
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}
